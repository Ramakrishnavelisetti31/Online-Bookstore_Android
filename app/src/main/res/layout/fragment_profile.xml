<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.ProfileFragment"
    android:background="@color/background">

    <ImageButton
        android:id="@+id/close_profile_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_keyboard_backspace_24"
        android:backgroundTint="@color/background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:clickable="true"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_margin="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/close_profile_fragment"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/email_text_layout">

        <TextView
            android:id="@+id/one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textColor="#837E7E"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="20dp"/>

        <TextView
            android:id="@+id/name_viewer"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text=""
            android:paddingLeft="20dp"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:background="@drawable/email_text_layout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/one"
            android:layout_margin="20dp"
            android:gravity="center_vertical"/>

        <TextView
            android:id="@+id/two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textColor="#837E7E"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/name_viewer"
            android:layout_margin="20dp"/>

        <TextView
            android:id="@+id/email_viewer"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text=""
            android:paddingStart="20dp"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:background="@drawable/email_text_layout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/two"
            android:layout_margin="20dp"
            android:gravity="center_vertical"/>

        <TextView
            android:id="@+id/three"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mobile number"
            android:textColor="#837E7E"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/email_viewer"
            android:layout_margin="20dp"/>

        <TextView
            android:id="@+id/mobile_viewer"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text=""
            android:paddingStart="20dp"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:background="@drawable/email_text_layout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/three"
            android:layout_margin="20dp"
            android:gravity="center_vertical"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>